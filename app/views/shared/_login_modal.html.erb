<div class="modal fade" id="loginModal" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">Ã—</button>
        <h4 class="modal-title"><%= t "navigation.login" %></h4>
      </div>
      <div class="modal-body">
        <%= form_for resource, as: resource_name, url: session_url(resource_name, protocol: ((Rails.env.production?||Rails.env.staging?) ? "https" : "http")), html:{class: 'new_session'} do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, required: true, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, required: true, class: "form-control" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="checkbox">
                <label for="user_remember_me", class="checkbox">
                  <%= f.check_box :remember_me %>
                  <%= t "remember_me" %>
                </label>
              </div>
            <% end %>
          </fieldset>
        </div>
        <div class="modal-footer">
          <span style="float:left;">
            <%= link_to t("forgot_password"), new_password_url(resource_name, protocol: ((Rails.env.production?||Rails.env.staging?) ? "https" : "http")) %> |  
            <%= link_to t("navigation.sign_up"), new_user_registration_url(protocol: ((Rails.env.production?||Rails.env.staging?) ? "https" : "http")) %>
          </span>
          <a href="#" class="btn btn-default" data-dismiss="modal"><%= t "close" %></a>
          <%= f.submit t("navigation.login"), class: 'btn btn-primary login_submit_btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
