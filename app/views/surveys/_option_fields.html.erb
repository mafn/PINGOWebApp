<div class="form-inline nested-fields row-margin">
  <%= f.text_field :name, :placeholder => t("name"), class: "form-control" %>
  <!-- <%= f.input :description, :label => "info text" %> -->
  <% if @survey.type == "multi" %>
    <label><%= f.check_box :correct, :class => "" %> (<%= t("surveys.edit.correct_answer") %>?)</label>
  <% else %>
    <label><%= f.radio_button :correct, true, :class => "radio_correct_true" %> (<%= t("surveys.edit.correct_answer") %>?)</label>
    <%= f.radio_button :correct, false, :class => "radio_correct_false", :style => "display:none" %>
  <% end %>
  <!-- <li><%= link_to_remove_association "remove option", f %></li> -->
</div>
