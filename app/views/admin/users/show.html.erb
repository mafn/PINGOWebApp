<div data-role="header">
<h1>Show user details</h1>
</div>
<div id="basic">
	<p><strong>Name:</strong> <%= h @user.name %> </p>
	<p><%= @user.organization %> <%= @user.faculty %> <%= @user.chair %></p>
	<p><strong>Planned use: </strong><%= (@user.user_comment.blank? ? icon_tag("ban-circle") : @user.user_comment) %> </p>
	<p><strong>E-Mail:</strong> <%= mail_to @user.email %>
	<% unless @user.events.blank? %>
		<p><strong>sessions created:</strong> <%= h @user.events.count %></p>
	<% end %>
	<% unless @user.questions.blank? %>
		<p><strong>questions created:</strong> <%= h @user.questions.count %></p>
	<% end %>
</div>
<p>
<%= link_to 'Edit', edit_admin_user_path(@user) %> |
<%= link_to 'Back', admin_users_path %>
</p>